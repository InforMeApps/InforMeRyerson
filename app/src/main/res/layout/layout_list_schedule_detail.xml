<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_noround"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">


        <TextView
            android:id="@+id/textview_schedule_list_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5677fc"
            android:padding="4dp"
            android:text="3:00 PM - 4:00 PM"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textview_schedule_list_detail_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/robotoThin"
            android:padding="4dp"
            android:text="MEC325 - 011"
            android:textColor="#454545"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_schedule_list_detail_coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@string/robotoThin"
            android:padding="4dp"
            android:text="Statistics and Mech of Materials"
            android:textColor="#454545" />

        <TextView
            android:id="@+id/textview_schedule_list_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@string/robotoLight"
            android:padding="4dp"
            android:text="Kerr Hall East 225"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/textview_schedule_list_detail_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@string/robotoLight"
            android:padding="4dp"
            android:text="Instructor: Marcello Papini"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/textview_schedule_list_detail_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@string/robotoLight"
            android:padding="4dp"
            android:text="Lecture"
            android:textColor="#666666" />


    </LinearLayout>

</LinearLayout>