<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/reference_layout_reminder_1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/textview_reminder_list_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="12"
                android:fontFamily="sans-serif-light"
                android:textSize="50sp"
                android:textColor="#e91e63" />

            <TextView
                android:id="@+id/textview_reminder_list_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAR"
                android:gravity="right"
                android:textSize="20sp"
                android:textColor="#e91e63"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textview_reminder_list_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:30 AM"
                android:gravity="right"
                android:textColor="#e91e63"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/reference_layout_reminder_2"
            android:layout_toRightOf="@id/reference_layout_reminder_1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e91e63"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/reference_layout_reminder_2"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_reminder_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textSize="30sp"
                android:textColor="#454545"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textview_reminder_list_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>