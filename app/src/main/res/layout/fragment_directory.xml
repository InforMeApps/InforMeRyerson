<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/directory_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:descendantFocusability="beforeDescendants"
                android:fontFamily="sans-serif-light"
                android:text="SEARCH BY NAME"
                android:textColor="#5677fc"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittext_directory_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_noround"
                android:hint="Enter First or Last Name"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_directory_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_button_selector"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="SEARCH"
                android:textColor="#FFFFFF" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-light"
                android:text="SEARCH BY DEPARTMENT"
                android:textColor="#5677fc"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_directory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>