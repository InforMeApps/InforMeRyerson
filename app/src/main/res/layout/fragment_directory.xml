<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f51b5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_directory_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_noround"
                android:drawableLeft="@drawable/ic_search"
                android:hint="Enter First or Last Name"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_directory_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/imagebutton_selector"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="SEARCH"
                android:textColor="#ffffff" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3949ab" />

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/drawer_shadow_horizontal" />
        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/directory_image" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:descendantFocusability="beforeDescendants"
                 android:fontFamily="sans-serif-light"
                 android:text="SEARCH BY NAME"
                 android:textColor="#5677fc"
                 android:textSize="20sp" />

             <EditText
                 android:id="@+id/edittext_directory_search"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:layout_marginTop="16dp"
                 android:drawableStart="@drawable/ic_search"
                 android:background="@drawable/card_noround"
                 android:hint="Enter First or Last Name"
                 android:imeOptions="actionSearch"
                 android:inputType="text"
                 android:paddingLeft="8dp"
                 android:paddingRight="16dp"
                 android:textSize="15sp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-light"
                android:text="SEARCH BY DEPARTMENT"
                android:textColor="#5677fc"
                android:textSize="22sp" />

            <ListView
                android:id="@+id/listview_directory_departmentlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>