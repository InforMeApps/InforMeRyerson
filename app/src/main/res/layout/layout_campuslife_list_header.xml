<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:padding="8dp">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_round"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_campuslife_list_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/imagebutton_selector"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <View
                android:id="@+id/campuslife_ref1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/reference_textView_campuslife_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/campuslife_ref1"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/campus_map"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/reference_textView_campuslife_map"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/campuslife_ref2"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_below="@id/campuslife_ref2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="@dimen/campuslife_smallicons_size"
                    android:layout_height="@dimen/campuslife_smallicons_size"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/campuslife_icons_places" />

                <ImageView
                    android:layout_width="@dimen/campuslife_smallicons_size"
                    android:layout_height="@dimen/campuslife_smallicons_size"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/campuslife_icons_print" />

                <ImageView
                    android:layout_width="@dimen/campuslife_smallicons_size"
                    android:layout_height="@dimen/campuslife_smallicons_size"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/campuslife_icons_washroom" />

                <ImageView
                    android:layout_width="@dimen/campuslife_smallicons_size"
                    android:layout_height="@dimen/campuslife_smallicons_size"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/campuslife_icons_computer" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
s</LinearLayout>